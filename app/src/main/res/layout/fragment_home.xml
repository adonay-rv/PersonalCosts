<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/top_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/title_bar_layout">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imagePerfil"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/login"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/saludo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="110dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/nunito_sans_light_italic"
                android:text="Hola"
                android:textColor="@color/colorsecondarytext"
                android:textSize="25dp"/>

            <TextView
                android:id="@+id/name_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="110dp"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/nunito_sans"
                android:text="Usuario"
                android:textColor="@color/colorsecondarytext"
                android:textSize="32sp"
                android:textStyle="bold" />


            <ImageButton
                android:id="@+id/salirsesion"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="centerInside"
                android:src="@drawable/baseline_exit_to_app_24" />

        </RelativeLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:elevation="5dp"
            app:cardCornerRadius="20dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:fontFamily="@font/nunito_sans"
                        android:text="Presupuesto"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorprimarytext"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/home_saldo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:layout_marginStart="20dp"
                        android:text="$100.00"
                        android:textSize="20dp"
                        android:fontFamily="@font/nunito_sans"/>

                    <Button
                        android:id="@+id/btn_addPresupuesto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="70dp"
                        android:text="Agregar"
                        android:backgroundTint="@color/color5"
                        android:textColor="@color/white"
                        android:fontFamily="@font/nunito_sans"/>

                    <Button
                        android:id="@+id/btn_resPresupuesto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="Quitar"
                        android:backgroundTint="@color/delete"
                        android:textColor="@color/white"
                        android:fontFamily="@font/nunito_sans"/>

                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ãšltimos gastos"
            android:gravity="center"
            android:layout_marginTop="40dp"
            android:textSize="20dp"
            android:fontFamily="@font/nunito_sans"
            android:textColor="@color/colorsecondarytext"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclervUltimosGastos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_marginTop="20dp" />


    </LinearLayout>





</FrameLayout>