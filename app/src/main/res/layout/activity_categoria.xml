<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:layout_height="match_parent"
    tools:context=".Categoria">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:id="@+id/title_bar_layout">
        <TextView
            android:id="@+id/page_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="16dp"
            android:text="Crear nueva categoría"
            android:textColor="@color/colordarkprimary"
            android:textStyle="bold"
            android:textSize="24sp"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_below="@+id/title_bar_layout"
        android:id="@+id/segundoLinear"
        android:layout_width="match_parent"
        android:layout_height="591dp"
        android:layout_marginVertical="26dp"
        android:backgroundTint="@color/white"
        android:orientation="vertical"
        android:padding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/category_title_text"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginVertical="8dp"
                android:hint="Nombre de la categoria"
                android:layout_marginTop="15dp"
                android:maxLines="1"
                android:padding="12dp"
                android:textColor="@color/black"
                android:textColorHint="@color/colorsecondarytext"
                android:textSize="20sp"
                android:textStyle="bold" />

        </RelativeLayout>


        <EditText
            android:id="@+id/category_content_text"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginVertical="8dp"
            android:background="@drawable/border_itemc"
            android:gravity="top"
            android:hint="Descripcion"
            android:minLines="15"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textColorHint="@color/colorsecondarytext"
            android:textSize="18sp" />

        <Button
            android:id="@+id/save_category_btn"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Añadir"
            android:backgroundTint="@color/colordarkprimary"
            android:layout_gravity="center"/>
    </LinearLayout>
</RelativeLayout>
