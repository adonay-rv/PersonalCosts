<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/top_background"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title_bar_layout"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-2dp"
            android:id="@+id/saludo"
            android:text="Bienvenido"
            android:textSize="32sp"
            android:textColor="@color/colordarkprimary"
            android:textStyle="bold"/>


        <ImageButton
            android:id="@+id/salirsesion"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="centerInside"
            android:src="@drawable/baseline_exit_to_app_24" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/category"
        android:text="Categorias"
        android:textSize="20sp"
        android:textColor="@color/lavender"
        android:layout_below="@+id/title_bar_layout"
        android:padding="16dp">

    </TextView>

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchviewcost"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_below="@id/category"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:iconifiedByDefault="false"
        style="@style/SearchViewStyle"
        app:queryHint="Buscar categoria"
        >
    </androidx.appcompat.widget.SearchView>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyler_view"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_below="@id/searchviewcost"
        android:padding="16dp"></androidx.recyclerview.widget.RecyclerView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_below="@id/recyler_view"
        android:layout_alignParentBottom="true"
        android:background="@null">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/add_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/baseline_note_add_24"
            app:backgroundTint="@color/colordarkprimary"
            app:tint="@color/white"></com.google.android.material.floatingactionbutton.FloatingActionButton>

        <RelativeLayout
            android:id="@+id/Menu_main"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/floating_layout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageButton
                    android:id="@+id/Menu_category"
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:scaleType="centerInside"
                    android:src="@drawable/categories_gastos"></ImageButton>

                <ImageButton
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:backgroundTint="@color/lavender"
                    android:scaleType="centerInside"
                    android:src="@drawable/reportegastos"></ImageButton>

                <ImageButton
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:scaleType="centerInside"
                    android:src="@drawable/saldodisponible"></ImageButton>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>
